/** Instructions **/

sudo apt-get update
sudo apt-get upgrade

/** Install PostgreSQL **/
sudo apt-get install postgresql

-- create user
sudo -u postgres psql postgres
\password postgres
# crtl+d to exit

-- create db
sudo -u postgres createdb pinpoint

